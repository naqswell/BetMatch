<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCardview" parent="CardView">
        <item name="cardBackgroundColor">?attr/cardBackgroundColor</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="cornerRadius">@dimen/_24sdp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="CustomMaterialButtonLandscape" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="cornerRadius">@dimen/_24sdp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="CustomDefaultTextView" parent="Widget.AppCompat.TextView">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="CustomDefaultTextViewSmaller" parent="CustomDefaultTextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="CustomTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>