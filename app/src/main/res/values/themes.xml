<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AllFootballLight1" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/orange</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.AllFootballLight2" parent="Theme.MaterialComponents.NoActionBar">
