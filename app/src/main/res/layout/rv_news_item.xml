<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?colorPrimary"
    >

    <ImageView
        android:id="@+id/imgNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txtDateNews"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"
        />

    <TextView
        android:id="@+id/txtDateNews"
        style="@style/CustomDefaultTextViewSmaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Дата"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgNews"
        app:layout_constraintBottom_toTopOf="@+id/txtTitleNews"
        android:layout_marginStart="@dimen/_16sdp"
        app:layout_constraintHorizontal_bias="0"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_8sdp"
        />

    <TextView
        android:id="@+id/txtTitleNews"
        style="@style/CustomDefaultTextViewSmaller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "Заголовок"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDateNews"
        app:layout_constraintBottom_toTopOf="@+id/txtNews"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginStart="@dimen/_16sdp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        />

    <TextView
        android:id="@+id/txtNews"
        style="@style/CustomDefaultTextViewSmaller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleNews"
        tools:text="ТекстТекстТекстТекстТекстТекстТекстТекстТекстТекстТекстТекстТекстТекстТекстТекстТекстТекст"
        android:layout_marginBottom="@dimen/_16sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>